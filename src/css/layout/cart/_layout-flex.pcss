.cart-container {
    @media (--large) {
        lost-flex-container: row;
    }

    & .form-cart {
        @media (--large) {
            order: 0;
            lost-column: 2/3 3;
        }
    }

    & .cart-summary {
        @media (--large) {
            order: 1;
            lost-column: 1/3 1;
        }
    }
}
