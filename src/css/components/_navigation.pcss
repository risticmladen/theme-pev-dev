        & .level0.submenu {
            position: absolute;
            z-index: 3;
            left: 0;
            top: pxtorem(76, 12);
            opacity: 0;
            visibility: hidden;
            transform: translateY(60px);
            transition: transform 0.4s cubic-bezier(0.7, 0, 0.3, 1) 0s;
        }

        &.opened {
            & .level0.submenu {
                opacity: 1;
                visibility: visible;
                transform: translateY(60px);
                background: white;
                height: pxtorem(320, 12);
                padding-top: 50px;
