.level-top {
    font-family: var(--font-stack__headings);
    @mixin adjustFontSize 22, 1.5;
    text-transform: uppercase;
    color: var(--color__text);

    & a {
        position: relative;

    }

    &.opened a {
        color: var(--theme__color__secondary);
    }

    &::after {
        position: absolute;
        top: pxtorem(3, 12);
        left: pxtorem(177, 12);
        font-family: "icomoon" !important;
        content: "\e908";
        transform: rotate(45deg);
        font-size: pxtorem(17, 12);
        transition: transform 500ms;

        @media (--medium) {
            display: none;
        }
    }

    &.opened a::after {
        transform: rotate(0deg);
    }
}

.level0.nav-1, .level0.nav-2 {

    @media (--medium) {
        &:hover a[class="level-top"]{
            color: var(--color__text-header-links);
        }

        & a[class="level-top"]::before {
            content: "";
            width: 100%;
            height: 100%;
            border-left: 2px solid;
            position: absolute;
            left: pxtorem(-25, 12);
            transform: skewX(-25deg);
        }
    }

    @media (--large) {
        & a::before {
            left: pxtorem(-25, 14);
        }
    }
}

.level0.nav-1 a[class="level-top"] {

    @media (--medium) {
