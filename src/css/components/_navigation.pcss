    padding-left: pxtorem(18,12);
    position: relative;
    display: inline-block;
    margin-bottom: pxtorem(8, 12);

    &::before {
        font-family: "icomoon" !important;
        content: "\e901";
        @mixin absolute 0, auto, auto, 0;
        color: black;
    }
}

.header-dropdown-wishlist {
    padding-left: pxtorem(18,12);
    position: relative;
    display: inline-block;
    margin-bottom: pxtorem(8, 12);

    &::before {
        font-family: "icomoon" !important;
        content: "\e921";
        @mixin absolute 0, auto, auto, 0;
        color: black;
    }
}

.header-dropdown-auth {
    padding-left: pxtorem(18,12);
    position: relative;
    display: inline-block;
