[data-content-type='row'][data-appearance='full-width'] {
    & > .row-full-width-inner {
        box-sizing: border-box;
        margin-left: auto;
        margin-right: auto;

        /*max-width: @layout__max-width;*/

        width: 100%;
    }
}

@media (--medium__max) {
    [data-content-type='row'][data-appearance='full-width'] {
        background-attachment: scroll !important;
    }
}
