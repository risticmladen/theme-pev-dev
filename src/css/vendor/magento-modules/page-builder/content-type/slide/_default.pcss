[data-content-type='slide'] {
    box-sizing: border-box;
    overflow: hidden;

    & > [data-element='link'],
    & > [data-element='empty_link'] {
        color: inherit;
        min-height: inherit;
        text-decoration: inherit;

        &:hover {
            color: inherit;
            text-decoration: inherit;
        }
    }

    & + [data-content-type='slide'] {
        height: 0;
        min-height: 0;

        & .slick-slider & {
            height: initial;
            min-height: inherit;
        }
    }
}

.pagebuilder-slide-wrapper {
    border-radius: inherit;
    box-sizing: border-box;
    min-height: inherit;
    overflow-wrap: break-word;
    word-wrap: break-word;

    & .jarallax-viewport-element {
        height: 100%;
        left: -15000vw;
        position: absolute;
        top: 0;
        width: 1px;
        z-index: 100;

        & .slick-current & {
            left: 0;
        }
    }

    &.jarallax {
        & .video-overlay {
            -webkit-transform: unset;
            z-index: 1;
        }

        & .pagebuilder-overlay {
            position: relative;
            z-index: 2;
        }

        & [id*='jarallax-container'] {
            & > div,
            & > img,
            & > video,
            & > iframe {
                margin: auto !important;
                transform: none !important;
            }
        }
    }

    & .pagebuilder-overlay {
        border-radius: inherit;
        padding: pxtorem(30, 14);
        @mixin rhythm 1, 1, 0, 0;

        @media (--medium) {
            padding: pxtorem(30, 15);
            @mixin rhythm 1, 1, 0, 0, $breakpoint-768px;
        }

        @media (--large) {
            padding: pxtorem(30, 16);
            @mixin rhythm 1, 1, 0, 0, $breakpoint-1024px;
        }

        transition: background-color 500ms ease;

        &.pagebuilder-poster-overlay {
            align-items: center;
            display: flex;
            justify-content: center;
            min-height: inherit;
        }

        &:not(.pagebuilder-poster-overlay) {
            max-width: pxtorem(540, 14);

            @media (--medium) {
                max-width: pxtorem(540, 15);
            }

            @media (--large) {
                max-width: pxtorem(540, 16);
            }
        }
    }

    & [data-element='content'] {
        min-height: pxtorem(42, 14);
        overflow: auto;

        @media (--medium) {
            min-height: pxtorem(44, 15);
        }

        @media (--large) {
            min-height: pxtorem(48, 16);
        }
    }

    & .pagebuilder-slide-button {
        margin: 0;
        max-width: 100%;
        text-align: inherit;
        transition: opacity 500ms ease;
        word-break: break-word;
        @mixin marginLeader 1;

        @media (--medium) {
            @mixin marginLeader 1, $breakpoint-768px;
        }

        @media (--large) {
            @mixin marginLeader 1, $breakpoint-1024px;
        }
    }
}

@media (--medium__max) {
    .pagebuilder-slide-wrapper {
        & .pagebuilder-overlay:not(.pagebuilder-poster-overlay) {
            max-width: none;
        }
    }
}
