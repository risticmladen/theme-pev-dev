[data-content-type='button-item'] {
    max-width: 100%;

    [data-element='link'],
    [data-element='empty_link'] {
        max-width: 100%;
        word-wrap: break-word;
    }

    [data-element='empty_link'] {
        cursor: default;
    }
}

a,
button,
div {
    & .pagebuilder-button-link {
        @mixin button-link;
    }

    & .pagebuilder-button-primary {
        @mixin button;
        @mixin button-primary;
        box-shadow: none;
    }

    &.pagebuilder-button-secondary {
        @mixin button;
        @mixin button-secondary;
        box-shadow: none;
    }
}
