                position: absolute;
                top: 0;
                left: 0;
                z-index: 1;
                font-size: 14px;
                line-height: 1.75;
            }

            & > span {
                display: block;
                overflow: hidden;

                &::after {
                    font-family: "icomoon" !important;
                    content: var(--icon__star1) var(--icon__star1) var(--icon__star1) var(--icon__star1) var(--icon__star1);
                    color: var(--theme__color__secondary);
