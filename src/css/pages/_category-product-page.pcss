            @media (--large) {
                height: fit-content;
                transform: translateY(pxtorem(-200, 14));
            }
        }
    }

    & .swiper-button-prev, & .swiper-button-next {

        @media (--medium) {
            display: none;
        }
    }

    & .swiper-pagination {

        @media (--medium) {
            display: none;
        }
    }

}
