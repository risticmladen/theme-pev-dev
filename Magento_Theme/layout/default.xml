<?xml version="1.0"?>
<page layout="1columns" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="default_head_blocks"/>
    <body>

        <referenceContainer name="main.content" htmlClass="page-main" />

        <referenceBlock name="footer_links">

            <referenceBlock name="privacy-policy-link" remove="true" />
            <referenceBlock name="search-term-popular-link" remove="true" />
            <referenceBlock name="contact-us-link" remove="true" />
            <referenceBlock name="catalog-search-advanced-link" remove="true" />
            <referenceBlock name="sales-guest-form-link" remove="true" />
            <referenceBlock name="copyright" remove="true"/>
            <referenceBlock name="report.bugs" remove="true"/>

            <block name="footer.cms.navigation.block" as="footerCmsNavigationBlock"
                   template="Magento_Theme::html/footer/links/footer-navigation.phtml">
                <block class="Magento\Cms\Block\Block" name="footer-soft-top-products" as="footerSoftTopProducts">
                    <arguments>
                        <argument name="block_id" xsi:type="string">soft-top-products</argument>
                    </arguments>
                </block>
                <block class="Magento\Cms\Block\Block" name="footer-jeep-accessories" as="footerJeepAccessories">
                    <arguments>
                        <argument name="block_id" xsi:type="string">jeep-accessories</argument>
                    </arguments>
                </block>
            </block>


            <block name="footer.logo.text" template="Magento_Theme::html/footer/footer-text.phtml">
                <block class="Magento\Theme\Block\Html\Header\Logo" name="footer-logo"/>
            </block>

            <block name="cms.customer.service.footer.block" as="cmsCustomerServiceFooterBlock"
                   template="Magento_Theme::html/footer/footer-links.phtml">
                <block class="Magento\Cms\Block\Block" name="footer-customer-service" as="footerCustomerService">
                    <arguments>
                        <argument name="block_id" xsi:type="string">customer-service</argument>
                    </arguments>
                </block>
            </block>
        </referenceBlock>
    </body>
</page>
