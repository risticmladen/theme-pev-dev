<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="default"/>
    <body>
        <referenceBlock name="page.main.title" remove="true" />
        <referenceContainer name="newsletter.container" remove="true" />

        <referenceContainer name="main.content" htmlClass="main-page-wrapper" />
        <referenceContainer name="main">
            <!-- First section Soft Top Products  -->
            <block class="Magento\Cms\Block\Block" name="first-section-soft-top-products">
                <arguments>
                    <argument name="block_id" xsi:type="string">first-section-soft-top-products</argument>
                </arguments>
            </block>

            <!-- Second section Jeep Accessories  -->
            <block class="Magento\Cms\Block\Block" name="second-section-jeep-accessories">
                <arguments>
                    <argument name="block_id" xsi:type="string">second-section-jeep-accessories</argument>
                </arguments>
            </block>

            <block class="Magento\Cms\Block\Block" name="third-section-soft-top-accessories">
                <arguments>
                    <argument name="block_id" xsi:type="string">third-section-soft-top-accessories</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
